  "item": [
    {
      "name": "Doctors",
      "item": [
        {
          "name": "Get All Doctors",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/doctors",
              "host": ["{{base_url}}"],
              "path": ["api", "doctors"]
            },
            "description": "Get all doctors without any filters"
          },
          "response": []
        },
        {
          "name": "Search Doctors",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/doctors?q=prakash&specialty=psychologist",
              "host": ["{{base_url}}"],
              "path": ["api", "doctors"],
              "query": [
                {
                  "key": "q",
                  "value": "prakash",
                  "description": "Search query for doctor name, specialization, or location"
                },
                {
                  "key": "specialty",
                  "value": "psychologist",
                  "description": "Filter by specialty"
                }
              ]
            },
            "description": "Search doctors by name, specialization, or location"
          },
          "response": []
        },
        {
          "name": "Get Doctors with Pagination",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/doctors?page=1&limit=3",
              "host": ["{{base_url}}"],
              "path": ["api", "doctors"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                },
